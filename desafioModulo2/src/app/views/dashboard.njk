{% extends "_layouts/default.njk" %}

{% block body %}

  <div class= "content">
    <strong>Bem vindo {{user.name}}</strong>
    <a href='/app/appointmentsProvider' class="Logout" >Meus Agendamentos</a>
    <ul class="providers">
      {% for provider in providers %}
        <li class= "provider">
          <div>
            <img src="/files/{{provider.avatar}}"/>
            <strong>{{provider.name}}</strong>
          </div>
          <a href="/app/appointments/new/{{provider.id}}">+</a>
        </li>
        {%endfor%}
      </ul>
      <a href='/logout' class="Logout" >sair</a>
    </div>

    {%endblock%}
